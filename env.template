# Production Environment Configuration Template
# Copy this file to .env and fill in your values

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# OAuth2 Configuration
OAUTH_CLIENT_ID=connect-portal
OAUTH_CLIENT_SECRET=your-oauth-client-secret-here
OAUTH_TOKEN_URL=https://sso.bracu.ac.bd/realms/bracu/protocol/openid-connect/token

# API Configuration
FRONTEND_URL=https://routinez.app
BACKEND_URL=https://connect.routinez.app
ALLOWED_ORIGINS=https://routinez.app,https://routinez.vercel.app

# Security
SECRET_KEY=your-super-secret-key-here-change-this
SESSION_SECRET=another-secret-key-for-sessions

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=
JWT_SECRET_KEY=your-jwt-secret-key-here

# Debug Settings (set to false in production)
DEBUG_MODE=false
TRACE_MODE=false
DEV_MODE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/connectapi/app.log

# Application
HOST=127.0.0.1
PORT=8000
WORKERS=4
